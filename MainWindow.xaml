<Window x:Class="Client_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Management"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Registries">
                <MenuItem x:Name="ClientsRegistry" Header="Clients Registry" Click="ClientsRegistry_Click"/>
                <MenuItem x:Name="ClientsTypesRegistry" Header="Clients types Registry" Click="ClientsTypesRegistry_Click"/>
                <MenuItem x:Name="InvoicesRegistry" Header="Invoices Registry" Click="InvoicesRegistry_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
